{
  "name": "undici",
  "version": "3.3.1",
  "description": "An HTTP/1.1 client, written from scratch for Node.js",
  "main": "index.js",
  "types": "index.d.ts",
  "module": "wrapper.mjs",
  "scripts": {
    "test": "tap test/*.js --no-coverage && jest test/jest/test",
    "test:typescript": "tsd",
    "coverage": "tap test/*.js",
    "coverage:ci": "eslint . && npm run coverage -- --coverage-report=lcovonly",
    "bench": "npx concurrently -k -s first \"node benchmarks/server.js\" \"node -e 'setTimeout(() => {}, 1000)' && node benchmarks\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodejs/undici.git"
  },
  "author": "Matteo Collina <hello@matteocollina.com>",
  "contributors": [
    {
      "name": "Robert Nagy",
      "url": "https://github.com/ronag",
      "author": true
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nodejs/undici/issues"
  },
  "homepage": "https://github.com/nodejs/undici#readme",
  "devDependencies": {
    "@sinonjs/fake-timers": "^6.0.1",
    "@types/node": "^14.6.2",
    "abort-controller": "^3.0.0",
    "benchmark": "^2.1.4",
    "concurrently": "^5.2.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "https-pem": "^2.0.0",
    "husky": "=4",
    "jest": "^26.4.0",
    "lint-staged": ">=10",
    "pre-commit": "^1.2.2",
    "prettier": "2.2.1",
    "proxy": "^1.0.2",
    "proxyquire": "^2.0.1",
    "snazzy": "^8.0.0",
    "standard": "^14.3.4",
    "tap": "^14.10.8",
    "tsd": "^0.13.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier",
      "prettier/prettier"
    ],
    "rules": {
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ]
    }
  },
  "tsd": {
    "directory": "test/types",
    "compilerOptions": {
      "esModuleInterop": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run coverage"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": [
      "eslint",
      "prettier --write"
    ]
  }
}
